{
  "name": "blog",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:css",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "build:css": "tailwindcss -i public/styles.css -o public/output.css -m",
    "deploy": "pnpm run build:css && wrangler deploy",
    "dev": "run-p dev:css dev:worker",
    "dev:css": "tailwindcss -i public/styles.css -o public/output.css --watch",
    "dev:worker": "wrangler dev"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250810.0",
    "hono": "^4.9.1",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.10",
    "wrangler": "^4.30.0"
  }
}
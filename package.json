{
  "name": "blog",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:css && pnpm run build:client",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "build:css": "tailwindcss -i public/styles.css -o public/output.css -m",
    "build:client": "tsup \"src/client/*.ts\" --format=esm --target=es2022 --out-dir=public/js --splitting --minify --sourcemap --clean --tsconfig tsconfig.client.json",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "run-p dev:css dev:client dev:worker",
    "dev:css": "tailwindcss -i public/styles.css -o public/output.css --watch",
    "dev:client": "tsup \"src/client/*.ts\" --format=esm --target=es2022 --out-dir=public/js --splitting --sourcemap --watch --tsconfig tsconfig.client.json",
    "dev:worker": "wrangler dev",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/?(*.)+(spec|test).(ts|tsx|js)"
    ]
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250810.0",
    "hono": "^4.9.1",
    "markdown-it": "^14.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "wrangler": "^4.30.0"
  }
}